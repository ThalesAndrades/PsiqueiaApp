{
  "cli": { "version": ">= 3.20.0" },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal",
      "channel": "dev",
      "resourceClass": "default",
      "ios": { "simulator": false, "buildConfiguration": "Debug" },
      "env": { "APP_ENV": "development" }
    },
    "staging": {
      "distribution": "internal",
      "channel": "staging",
      "autoIncrement": true,
      "env": { "APP_ENV": "staging" },
      "resourceClass": "default"
    },
    "production": {
      "distribution": "store",
      "channel": "production",
      "autoIncrement": true,
      "env": { "APP_ENV": "production" },
      "resourceClass": "large"
    }
  },
  "submit": {
    "production": {
      "ios": {
        "appleId": "seu-apple-id@example.com",
        "ascAppId": "<APP_STORE_CONNECT_APP_ID>",
        "appleTeamId": "<APPLE_TEAM_ID>"
      },
      "android": {
        "serviceAccountKeyPath": "./credentials/google-service-account.json",
        "track": "production"
      }
    }
  }
}